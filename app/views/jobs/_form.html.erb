<%= form_for @job do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title , placeholder: "Enter job title", :required => 'required'%>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location, placeholder: "Enter job location", :required => 'required' %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, size: '60x6', placeholder: "Enter description", :required => 'required' %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
